<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import it.polimi.se2019.ui.gui.components.*?>

<?import javafx.scene.control.Label?>
<fx:root fx:id="borderPane" type="GridPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">


    <HBox alignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BASELINE" GridPane.halignment="CENTER"
          GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
        <ActionPane fx:id="actionPane"/>
        <BoardView fx:id="board" color="GREEN"/>

    </HBox>

    <MapView fx:id="mapView" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="TOP"
             GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" maxHeight="1000"/>

    <GridPane fx:id="cardGridPane" GridPane.rowIndex="0" GridPane.columnIndex="1">
        <rowConstraints>
            <RowConstraints percentHeight="40"/>
            <RowConstraints percentHeight="40"/>
            <RowConstraints percentHeight="20"/>
        </rowConstraints>


        <children>
            <CardPane fx:id="weaponsCardPane" title="Le tue armi" type="weapon" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <CardPane fx:id="powerUpsCardPane" title="I tuoi potenziamenti" type="poweup" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <AnchorPane GridPane.rowIndex="2" GridPane.columnIndex="0">
                <PlayersInfoTable fx:id="playersInfoTable" maxHeight="Infinity" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
            </AnchorPane>
        </children>

    </GridPane>


    <ChoosePane fx:id="choosePane" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
</fx:root>
