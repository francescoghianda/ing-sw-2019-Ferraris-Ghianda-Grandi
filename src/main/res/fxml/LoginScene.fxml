<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Box?>
<fx:root type="BorderPane" prefHeight="403" prefWidth="600" xmlns:fx="http://javafx.com/fxml">
    <center>
        <BorderPane fx:id="formBg" maxWidth="400" maxHeight="50">
            <center>
                <GridPane fx:id="gridPane" alignment="CENTER" hgap="20">
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameTextFiled" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                </GridPane>
            </center>
        </BorderPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" minHeight="100" >
            <Button fx:id="loginButton" text="Login" onAction="#confirm"/>
        </HBox>
    </bottom>
</fx:root>